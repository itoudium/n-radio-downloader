{
  "compilerOptions": {
    "target": "ES6",
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist", 
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "jsx": "react-jsx",
    "lib": ["dom", "es2021"],
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["app/**/*", "downloader/**/*", "*.js"]
}
